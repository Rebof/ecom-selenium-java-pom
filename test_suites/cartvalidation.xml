<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Ecom Suite" parallel="tests" thread-count="3">

    <listeners>
        <listener class-name="ecom.TestComponents.Listeners"/>
    </listeners>

    <!-- Run only the 'cartValidation' group -->
    <test thread-count="5" name="Cart Validation Test">
        <groups>
            <run>
                <include name="cartValidation"/>
            </run>
        </groups>
        <classes>
            <class name="ecom.Tests.ErrorValidationsTest"/>
        </classes>
    </test>

</suite>
